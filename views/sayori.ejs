  <script>
    async function loadDiscordWidget() {
      try {
        const res = await fetch("https://discord.com/api/guilds/989942565908389908/widget.json");
        const data = await res.json();

        document.getElementById("server-name").textContent = data.name;

        animateCount("member-count", data.presence_count);
        document.getElementById("discord-link").href = data.instant_invite;
      } catch (err) {
        document.getElementById("server-name").textContent = "Server unavailable";
        document.getElementById("member-count").textContent = "Try again later.";
      }
    }

    function animateCount(id, target) {
      let el = document.getElementById(id);
      let current = 0;
      let increment = Math.ceil(target / 60);
      let interval = setInterval(() => {
        current += increment;
        if (current >= target) {
          current = target;
          clearInterval(interval);
        }
        el.textContent = `${current} online members ‚ú®`;
      }, 16);
    }

    // Initial load
    loadDiscordWidget();

    // Auto-refresh every 30s
    setInterval(loadDiscordWidget, 30000);
  </script>


